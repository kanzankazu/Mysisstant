        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".view.LogRegActivity"
            android:theme="@style/AppTheme.FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.AlarmSummaryActivity"
            android:label="@string/title_activity_alarm_summary"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".view.AcaraSummaryActivity"
            android:label="@string/title_activity_alarm_summary"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".view.NoteSummaryActivity"
            android:label="@string/title_activity_note_summary"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".view.AcaraActivity"
            android:label="Acara Input"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".view.AlarmActivity"
            android:label="Alarm Input"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".view.NoteActivity"
            android:label="Note Input"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".view.NoteFriendDetailActivity"
            android:theme="@style/AppTheme" />
        <activity android:name=".view.RecordingActivity"></activity>
    </application>

</manifest>