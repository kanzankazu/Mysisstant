<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_very_light"
    android:orientation="vertical"
    tools:context=".view.AlarmActivity">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:scrollIndicators="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:gravity="right"
                android:orientation="horizontal">

                <com.rm.rmswitch.RMSwitch
                    android:id="@+id/rmsAlarmInput"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:checked="false"
                    app:forceAspectRatio="true"
                    app:switchBkgCheckedColor="@color/colorAccent"
                    app:switchBkgNotCheckedColor="@color/colorPrimary"
                    app:switchDesign="android"
                    app:switchToggleCheckedColor="@color/colorPrimary"
                    app:switchToggleCheckedImage="@drawable/ic_moon_white"
                    app:switchToggleNotCheckedColor="@color/colorAccent"
                    app:switchToggleNotCheckedImage="@drawable/ic_sun_white" />

            </LinearLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:animateLayoutChanges="true"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:animateLayoutChanges="true"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:animateLayoutChanges="true"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="Jam"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="Menit"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="5dp"
                            android:background="@color/colorAccent" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:animateLayoutChanges="true"
                            android:orientation="horizontal">

                            <com.github.florent37.singledateandtimepicker.widget.WheelHourPicker
                                android:id="@+id/whpAlarmInputJam"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                app:wheel_atmospheric="true"
                                app:wheel_curtain="true"
                                app:wheel_curved="true"
                                app:wheel_indicator="true"
                                app:wheel_indicator_color="@color/colorAccent"
                                app:wheel_item_text_color="@color/colorAccent"
                                app:wheel_item_text_size="30dp"
                                app:wheel_same_width="true"
                                app:wheel_selected_item_text_color="@color/colorPrimary"
                                app:wheel_visible_item_count="5" />

                            <com.github.florent37.singledateandtimepicker.widget.WheelMinutePicker
                                android:id="@+id/whpAlarmInputMenit"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                app:wheel_atmospheric="true"
                                app:wheel_curtain="true"
                                app:wheel_curved="true"
                                app:wheel_indicator="true"
                                app:wheel_indicator_color="@color/colorAccent"
                                app:wheel_item_text_color="@color/colorAccent"
                                app:wheel_item_text_size="30dp"
                                app:wheel_same_width="true"
                                app:wheel_selected_item_text_color="@color/colorPrimary"
                                app:wheel_visible_item_count="5" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/colorAccent" />

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="2dp"
                app:cardPreventCornerOverlap="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:animateLayoutChanges="true"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/cbAlarmInputHariSenin"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/select_color"
                        android:button="@null"
                        android:gravity="center"
                        android:padding="5dp"
                        android:tag="2"
                        android:text="SEN" />

                    <CheckBox
                        android:id="@+id/cbAlarmInputHariSelasa"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/select_color"
                        android:button="@null"
                        android:gravity="center"
                        android:padding="5dp"
                        android:tag="3"
                        android:text="SEL" />

                    <CheckBox
                        android:id="@+id/cbAlarmInputHariRabu"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/select_color"
                        android:button="@null"
                        android:gravity="center"
                        android:padding="5dp"
                        android:tag="4"
                        android:text="RAB" />

                    <CheckBox
                        android:id="@+id/cbAlarmInputHariKamis"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/select_color"
                        android:button="@null"
                        android:gravity="center"
                        android:padding="5dp"
                        android:tag="5"
                        android:text="KAM" />

                    <CheckBox
                        android:id="@+id/cbAlarmInputHariJumat"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/select_color"
                        android:button="@null"
                        android:gravity="center"
                        android:padding="5dp"
                        android:tag="6"
                        android:text="JUM" />

                    <CheckBox
                        android:id="@+id/cbAlarmInputHariSabtu"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/select_color"
                        android:button="@null"
                        android:gravity="center"
                        android:padding="5dp"
                        android:tag="7"
                        android:text="SAB" />

                    <CheckBox
                        android:id="@+id/cbAlarmInputHariMinggu"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/select_color"
                        android:button="@null"
                        android:gravity="center"
                        android:tag="1"
                        android:text="MING" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:animateLayoutChanges="true"
                    android:orientation="vertical"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp">

                    <LinearLayout
                        android:id="@+id/llAlarmInputAddfriend"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:animateLayoutChanges="true"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rectangle_left"
                            android:src="@drawable/ic_crew_"
                            android:tint="@color/white" />

                        <TextView
                            android:id="@+id/tvAlarmInputAddFriend"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="15dp"
                            android:ellipsize="marquee"
                            android:gravity="center_vertical"
                            android:lines="1"
                            android:text="Add Friend" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llAlarmInputVoice"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp"
                        android:animateLayoutChanges="true"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/rectangle_left"
                            android:src="@drawable/ic_mic" />

                        <TextView
                            android:id="@+id/tvAlarmInputVoice"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="15dp"
                            android:layout_weight="1"
                            android:ellipsize="marquee"
                            android:gravity="center_vertical"
                            android:lines="1"
                            android:text="Voice" />

                        <ImageView
                            android:id="@+id/ivAlarmInputVoicePlayStop"
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="15dp"
                            android:src="@drawable/ic_play_mp"
                            android:tint="@color/colorAccent"
                            android:visibility="gone" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llAlarmInputRingtone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp"
                        android:animateLayoutChanges="true"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rectangle_left"
                            android:src="@drawable/ic_multimedia" />

                        <TextView
                            android:id="@+id/tvAlarmInputRingtone"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="15dp"
                            android:ellipsize="marquee"
                            android:gravity="center_vertical"
                            android:lines="1"
                            android:text="Music Galeri" />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <Button
                android:id="@+id/bAlarmInputBuat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_radius"
                android:backgroundTint="@color/colorAccent"
                android:text="Buat Sekarang"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>